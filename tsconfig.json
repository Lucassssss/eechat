{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    // "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": false,     // << 改成 false，允许 emit
    "baseUrl": ".",
    "noImplicitAny": false,
    "composite": true,
    "declaration": true,
    // "sourceMap": true,
    // "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "emitDeclarationOnly": false,
    "paths": {
      "@eechat/*": ["packages/*/src"]
    },
  },
  "include": ["src", "packages", "electron"],
  "references": [
    { "path": "./packages/milvus" },
    { "path": "./packages/knowledge" }
  ]
}

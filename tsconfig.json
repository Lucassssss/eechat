{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    // "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": false,     // << 改成 false，允许 emit
    "baseUrl": ".",
    "noImplicitAny": false,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "paths": {
      "@/*": ["./src/*"],
      "@eechat/*": ["packages/*/src"]
    },
  },
  "include": ["src", "packages", "electron"],
  "references": [
    { "path": "./packages/milvus" },
    { "path": "./packages/knowledge" }
  ]
}
